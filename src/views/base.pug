doctype html
html(lang="ko")
  head
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    title #{ pageTitle } | Futube
  body
    header
      h1= pageTitle
      nav
        ul
          li
            a(href="/") Home
          li
            a(href="/videos/upload") Upload
          li
            a(href="/search") Search
          if loggedIn
            li
              a(href="/logout") Log Out
            li
              a(href="/my-profile") #{ loggedInUser.name }'s profile 
          else
            li
              a(href="/join") Join
            li
              a(href="/login") Log In
    main
      block content
    include partials/footer.pug
